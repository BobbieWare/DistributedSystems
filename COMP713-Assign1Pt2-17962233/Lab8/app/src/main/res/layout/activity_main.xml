<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:hint="Message to send"
        android:id="@+id/messageToSend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messageToSend"
        android:layout_centerInParent="true"
        android:text="Set message"
        android:onClick="setMessage"/>

    <TextView
        android:layout_width="204dp"
        android:layout_height="389dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/sentMessages" />

    <TextView
        android:layout_width="204dp"
        android:layout_height="389dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/sentMessages"
        android:id="@+id/recievedMessages"/>

    <TextView
        android:layout_width="204dp"
        android:layout_height="30dp"
        android:layout_above="@+id/recievedMessages"
        android:layout_marginEnd="-205dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/recievedMessages"
        android:text="Recieved messages:" />

    <TextView
        android:layout_width="204dp"
        android:layout_height="30dp"
        android:layout_above="@+id/sentMessages"
        android:text="Sent messages:"/>

</RelativeLayout>