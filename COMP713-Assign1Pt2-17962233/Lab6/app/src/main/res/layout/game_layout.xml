<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25dp"
    android:minHeight="25dp">
    <TextView
        android:text="@string/title"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textTitle"
        android:textColor="#ffe64a19"
        android:paddingLeft="5dp" />
    <TextView
        android:text="@string/rule_title"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textRuleTitle"
        android:layout_below="@id/textTitle"
        android:paddingLeft="10dp" />
    <TextView
        android:text="@string/game_rules"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textRule"
        android:layout_below="@id/textRuleTitle"
        android:paddingTop="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="25dp"
        android:paddingLeft="25dp" />
    <EditText
        android:id="@+id/guess"
        android:inputType="number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textRule"
        android:layout_marginBottom="-49dp"
        android:paddingTop="20dp" />
    <Button
        android:id="@+id/guessButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/textRule"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="18dp"
        android:onClick="guessButtonClicked"
        android:text="Guess" />
    <TextView
        android:id="@+id/textMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/guess"
        android:layout_marginBottom="-105dp"
        android:paddingLeft="25dp"
        android:paddingTop="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="50dp"
        android:text="Message"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/holo_red_light" />
</RelativeLayout>